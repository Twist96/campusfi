<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <TextView
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:text="I like you post a lot, where are you posting from?"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@drawable/line"
        app:layout_constraintTop_toBottomOf="@id/comment"/>

    <LinearLayout
        android:id="@+id/post_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/line">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_heart_red"/>

        <TextView
            android:id="@+id/likeNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="132"
            android:textColor="@android:color/black"
            android:layout_marginStart="4dp"
            android:textSize="13sp"
            android:padding="0dp"/>

        <ImageView
            android:id="@+id/post_comment"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_comment_gray"
            android:layout_marginStart="35dp"/>

        <TextView
            android:id="@+id/post_commentNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="94"
            android:textColor="@android:color/black"
            android:layout_marginStart="4dp"
            android:textSize="13sp"
            android:padding="0dp"/>

        <TextView
            android:id="@+id/post_replies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="show replies"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="30dp"
            android:textSize="12sp"
            android:padding="0dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/line"
        app:layout_constraintTop_toBottomOf="@id/post_linearLayout"
        android:layout_marginTop="2dp"/>


</android.support.constraint.ConstraintLayout>