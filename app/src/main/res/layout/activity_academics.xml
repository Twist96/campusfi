<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="35dp"
    tools:context="com.example.tochi.campusfi.Academics">


    <TextView
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:padding="25dp"
        android:text="Tell us about your academics"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/fullName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="35dp" />


    <LinearLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/con"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666">

        <TextView
            android:id="@+id/aca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:labelFor="@id/academicLevel"
            android:text="Academic level"
            android:textColor="@color/colorPrimary"
            android:textSize="11.5sp"
            app:layout_constraintTop_toBottomOf="@id/date" />

        <Spinner
            android:id="@+id/academicLevel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/aca" />

        <TextView
            android:id="@+id/sch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:labelFor="@id/schoolType"
            android:text="School type"
            android:textColor="@color/colorPrimary"
            android:textSize="11.5sp"
            app:layout_constraintTop_toBottomOf="@id/academicLevel" />

        <Spinner
            android:id="@+id/schoolType"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sch" />

        <TextView
            android:id="@+id/schCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:labelFor="@id/schoolCategory"
            android:text="School category"
            android:textColor="@color/colorPrimary"
            android:textSize="11.5sp"
            app:layout_constraintTop_toBottomOf="@id/schoolType" />

        <Spinner
            android:id="@+id/schoolCategory"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/schCat" />

        <TextView
            android:id="@+id/schl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:labelFor="@id/schoolCategory"
            android:text="School"
            android:textColor="@color/colorPrimary"
            android:textSize="11.5sp"
            app:layout_constraintTop_toBottomOf="@id/schoolCategory" />

        <Spinner
            android:id="@+id/school"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/schl" />

    </LinearLayout>

    <Button
        android:id="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_boarder"
        android:onClick="Continue"
        android:text="Continue"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="60dp" />


</android.support.constraint.ConstraintLayout>
